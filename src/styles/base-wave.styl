@require './animation'

$base = '.tu-base-wave'

{$base}
  pointer-events none
  box-sizing border-box
  opacity 0
  border-radius inherit
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  z-index 1
  animation-iteration-count 1  // 动画执行次数
  animation-duration 0.6s  // 动画持续时间
  animation-timing-function cubic-bezier(0, 0, 0.2, 1), cubic-bezier(0, 0, 0.2, 1)  // 动画过渡效果
  &{$base}--active
    animation-name wave-spread, wave-opacity
  &{$base}--big-active
    animation-name big-wave-spread, big-wave-opacity
