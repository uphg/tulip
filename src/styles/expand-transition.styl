
// $duration = 0.3s
// $leaving-delay = 0s
$cubic-bezier-ease-in-out = cubic-bezier(.4, 0, .2, 1)
$cubic-bezier-ease-out = cubic-bezier(0, 0, .2, 1)
$cubic-bezier-ease-in = cubic-bezier(.4, 0, 1, 1)

// --- height expand
.tu-fade-in-height-expand-transition-leave-from,
.tu-fade-in-height-expand-transition-enter-to
  opacity 1

.tu-fade-in-height-expand-transition-leave-to,
.tu-fade-in-height-expand-transition-enter-from
  opacity 0
  margin-top 0 !important
  margin-bottom 0 !important
  padding-top 0 !important
  padding-bottom 0 !important

.tu-fade-in-height-expand-transition-leave-active
  overflow hidden
  transition height 0.3s $cubic-bezier-ease-in-out,
    opacity 0.3s $cubic-bezier-ease-out,
    margin-top 0.3s $cubic-bezier-ease-in-out,
    margin-bottom 0.3s $cubic-bezier-ease-in-out,
    padding-top 0.3s $cubic-bezier-ease-in-out,
    padding-bottom 0.3s $cubic-bezier-ease-in-out

.tu-fade-in-height-expand-transition-enter-active
  overflow hidden
  transition height 0.3s $cubic-bezier-ease-in-out,
    opacity 0.3s $cubic-bezier-ease-in,
    margin-top 0.3s $cubic-bezier-ease-in-out,
    margin-bottom 0.3s $cubic-bezier-ease-in-out,
    padding-top 0.3s $cubic-bezier-ease-in-out,
    padding-bottom 0.3s $cubic-bezier-ease-in-out

// --- width expand
