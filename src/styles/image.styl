.tu-image
  display inline-flex
  &-inner
    width 100%
    height 100%

.tu-image-preview
  transition transform 0.25s
  pointer-events all
  max-height calc(100vh - 32px)
  max-width calc(100vw - 32px)

  &-container
    position fixed
    inset 0
    z-index 2000

  &-overlay
    position absolute
    inset 0
    z-index -1
    background-color rgba(0, 0, 0, 0.35)

  &-wrapper
    position absolute
    inset 0
    pointer-events none
    display flex
    justify-content center
    align-items center
    flex-wrap wrap

  &-toolbar
    height 48px
    border-radius 24px
    background-color rgba(0, 0, 0, 0.35)
    position absolute
    left 50%
    bottom 36px
    transform translateX(-50%)
    padding 0 12px
    display flex
    align-items center
    user-select none
    color rgba(255, 255, 255, 0.9);
    .tu-base-icon
      box-sizing border-box
      cursor pointer
      min-width 44px
      height 28px
      padding 0 8px

/* --- 动画样式 */
pop-fade('tu-image', '.tu-image-preview-wrapper')
