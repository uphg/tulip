
// $tu-popover-bgcolor = #262626
$tu-popover-bgcolor = #fff

.tu-popover
  // max-width 320px
  max-width 280px
  padding 8px 12px
  border-radius 3px
  background-color $tu-popover-bgcolor
  min-height 40px
  min-width 60px
  position absolute
  z-index 1000
  box-shadow 0 3px 6px -4px rgba(0, 0, 0, 0.12), 0 6px 16px 0 rgba(0, 0, 0, 0.08), 0 9px 28px 8px rgba(0, 0, 0, 0.05)
  &-arrow-wrapper
    position absolute
    bottom 0
    left 50%
  &-arrow
    position absolute
    width 0
    height 0
    margin-left -6px
    border-width 6px
    border-bottom-width 0
    border-color transparent
    border-top-color $tu-popover-bgcolor
    border-style solid

/* --- 动画样式 */
.popover-fade-enter-active {
  animation tu-popover-fade-in var(--tu-transition-time)
}

.popover-fade-leave-active {
  animation tu-popover-fade-out var(--tu-transition-time)
}

@keyframes tu-popover-fade-in {
  0% {
    transform scale(0.8)
    opacity 0
  }
  100% {
    stable()
    transform scale(1)
    opacity 1
  }
}

@keyframes tu-popover-fade-out {
  0% {
    transform scale(1)
    opacity 1
  }
  100% {
    transform scale(0.8)
    opacity 0
  }
}
