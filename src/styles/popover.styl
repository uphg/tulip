$arrow = '.tu-popover-arrow'

.tu-popover
  position absolute
  box-shadow var(--tu-box-shadow)
  word-wrap break-word
  width max-content
  max-width 320px
  &--default
    padding 8px 12px
    border-radius 3px
    background-color var(--tu-popover-color)

  &-arrow-wrapper, {$arrow}
    position absolute

  {$arrow}
    width 0
    height 0
    border-style solid
    border-width 6px
    border-color transparent

  &-arrow--top
    bottom 0
    {$arrow}
      border-bottom-width 0
      border-top-color var(--tu-popover-color)

  &-arrow--left
    right 0
    {$arrow}
      border-right-width 0
      border-left-color var(--tu-popover-color)
  
  &-arrow--right
    left 0
    {$arrow}
      border-left-width 0
      border-right-color var(--tu-popover-color)

  &-arrow--bottom
    top 0
    {$arrow}
      border-top-width 0
      border-bottom-color var(--tu-popover-color)
