
$base = ".tu-collapse"

{$base}
  border 1px solid var(--tu-border-color)
  border-radius 3px

{$base}-item
  border-bottom 1px solid var(--tu-border-color)
  &:last-child
    border-bottom 0
  &__header
    cursor pointer
    display flex
    align-items center
    padding 12px 16px
  &-arrow
    display inline-flex
    font-size 18px
    margin-right 4px
    transition transform 0.15s $cubic-bezier
    &.active
      transform rotate(90deg)
  &__content
    box-sizing border-box
    padding 12px 16px
    background-color #f7f8fa
    border-top 1px solid var(--tu-border-color)

      