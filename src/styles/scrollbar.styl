$base = ".tu-scrollbar"

{$base}
  position relative
  &-container
    width 100%
    height 100%
    overflow scroll
    &::-webkit-scrollbar,
    &::-webkit-scrollbar-track-piece,
    &::-webkit-scrollbar-thumb
      width 0
      height 0
      display none

    {$base}--direction-x
      overflow-x auto

  &-content
    box-sizing border-box
    width fit-content
    display flow-root

{$base}-rail
  position absolute
  cursor pointer
  pointer-events all
  user-select none // 禁止选择内部文字，造成滚动条抬起失效的 bug 
  &__scrollbar
    position absolute
    background-color rgba(0, 0, 0, 0.25)
    border-radius 5px
    transition background-color 0.25s
    &:hover, &:active
      background-color rgba(0, 0, 0, 0.4)

  &--vertical
    width 5px
    right 4px
    top 2px
    bottom 2px
    {$base}-rail__scrollbar
      width 100%

  &--horizontal
    height 5px
    left 2px
    right 2px
    bottom 4px
    {$base}-rail__scrollbar
      height 100%


.el-scrollbar__wrap--hidden-default::-webkit-scrollbar {
    display: none;
}