:root
  // 主题色
  --tu-color-primary #1a73e8
  --tu-color-primary-light #5d9cef
  --tu-color-primary-dark #135bb9

  // 成功
  --tu-color-success #34A853
  --tu-color-success-hover #5db975
  --tu-color-success-active #2f974b

  // 信息
  --tu-color-info #8D93AB
  --tu-color-info-hover #a4a9bc
  --tu-color-info-active #7f849a

  // 警告
  --tu-color-warning #F9B208
  --tu-color-warning-hover #fcc937
  --tu-color-warning-active #e0a007

  // 错误
  --tu-color-error #EA4335
  --tu-color-error-hover #f1877d
  --tu-color-error-active #d33c30

  // 文本颜色
  --tu-color-text-primary #0d0d0d
  --tu-color-text-minor #606266
  --tu-color-text-looming #C0C4CC

  --tu-color-disabled rgb(250, 250, 252)

  --tu-wave-box-shadow 0 0 0 2.2px rgba(0, 0, 0, 0.05)
  --tu-wave-active-box-shadow 0 0 0 2.2px rgba(68, 99, 209, 0.2)

  --tu-font-size 14px
  --tu-font-size-small 12px
  --tu-icon-size var(--tu-font-size)

  --tu-border-color #cdd1e4
  --tu-border-color-light #e4e5e9
  --tu-border-color-dark #9ca3af
  --tu-placeholder-color #c2c2c2

  --tu-border-radius 3px
  --tu-border-radius-round 18px
  --tu-border-radius-small-round 16px
  --tu-border-radius-small-circle 16px
  --tu-border-radius-big-round 20px
  --tu-border-radius-big-circle 20px

  // 过渡效果
  --tu-transition-time 0.25s
  --tu-transition-effect cubic-bezier(.645, .045, .355, 1)
  --tu-all-transition all var(--tu-transition-time) var(--tu-transition-effect)
  --tu-color-transition color var(--tu-transition-time) var(--tu-transition-effect)
  --tu-bg-color-transition background-color var(--tu-transition-time) var(--tu-transition-effect)
  --tu-border-color-transition border-color var(--tu-transition-time) var(--tu-transition-effect)
  --tu-box-shadow-transition box-shadow var(--tu-transition-time) var(--tu-transition-effect)

  --tu-box-shadow 0 3px 6px -4px rgba(0, 0, 0, 0.12), 0 6px 16px 0 rgba(0, 0, 0, 0.08), 0 9px 28px 8px rgba(0, 0, 0, 0.05)

  /* Button default */
  --tu-button-height 34px
  --tu-button-border-color #dcdfe6
  --tu-button-border-radius var(--tu-border-radius)
  --tu-button-icon-size 16px
 
  /* Button small */
  --tu-button-small-font-size 13px
  --tu-button-small-height 28px
  --tu-button-small-padding 14px
  --tu-button-small-padding-round 18px
  --tu-button-small-padding-circle 6.5px
  --tu-button-small-icon-size 15px

  /* Button large */
  --tu-button-large-font-size 15px
  --tu-button-large-height 40px
  --tu-button-large-padding 18px
  --tu-button-large-padding-round 25px
  --tu-button-large-padding-circle 11px
  --tu-button-large-icon-size 18px

  /* -- Input */
  --tu-input-border-color var(--tu-color-primary)
  --tu-input-padding 0 14px
  --tu-input-line-height 34px
  --tu-input-placeholder-color #C0C4CC
  --tu-input-disabled-bg-color #f3f4f6
  --tu-textarea-line-height 1.5
  --tu-textarea-padding 6px 14px

  /* Switch */
  --tu-switch-height 22px
  --tu-switch-padding 12px
  --tu-switch-small-height 18px
  --tu-switch-large-height 26px
  --tu-switch-core-height calc(var(--tu-switch-height) - 4px)
  --tu-switch-active-bg-color var(--tu-color-primary)
  --tu-switch-bg-color rgba(0, 0, 0, 0.14)
  --tu-switch-unfold 5px

  /* Dialog */
  --tu-dialog-border-radius var(--tu-border-radius)
  --tu-animation-time var(--tu-transition-time)

  /* Collapse */
  /* Tabs */
  /* Popover */
  --tu-popover-color #fff
  --tu-tooltip-color #262626

  --tu-scrollbar-color rgba(0, 0, 0, 0.25)
  --tu-scrollbar-color-hover rgba(0, 0, 0, 0.4)

  --tu-menu-box-shadow 0 3px 6px -4px rgba(0, 0, 0, 0.12), 0 6px 16px 0 rgba(0, 0, 0, 0.08), 0 9px 28px 8px rgba(0, 0, 0, 0.05)

.tu-dark
  --tu-scrollbar-color rgba(255, 255, 255, 0.25)
  --tu-scrollbar-color-hover rgba(255, 255, 255, 0.35)
