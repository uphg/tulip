$base = '.tu-checkbox'

{$base}
  --tu-size 16px
  --tu-border-radius 2px
  --tu-box-shadow-focus 0 0 0 2px rgba(68, 99, 209, 0.3)
  cursor pointer
  user-select none
  display inline-flex
  position relative
  line-height var(--tu-line-height)
  &:hover:not(&--disabled)
    {$base}-box
      border-color var(--tu-primary-color)

  &-input
    cursor pointer
    position absolute
    inset 0
    opacity 0

  &-box-wrap
    display inline-flex
    align-items center
  
  &-box
    position relative
    width var(--tu-size)
    height var(--tu-size)
    border 1px solid var(--tu-border-color)
    border-radius var(--tu-border-radius)
    transition background-color 0.3s $cubic-bezier, border-color 0.3s $cubic-bezier, box-shadow 0.3s $cubic-bezier
  
  &-box__icon
    position absolute
    inset 0
    display flex
    align-items center
    justify-content center
  
  &__label
    padding 0 8px
  
  .check-icon, .line-icon
    fill #fff
    width 100%
    height 100%
    opacity 0
    transform scale(0.5)
    transform-origin center
    transition transform 0.3s $cubic-bezier, fill 0.3s $cubic-bezier, opacity 0.3s $cubic-bezier

  &:not(&--disabled)&--focus:not(:active)
    {$base}-box
      border-color var(--tu-primary-color)
      box-shadow var(--tu-box-shadow-focus)

  &--checked, &--indeterminate
    {$base}-box
      border-color var(--tu-primary-color)
      background-color var(--tu-primary-color)
    .check-icon, .line-icon
      opacity 1
      transform scale(1)
  
  &--disabled
    {$base}-box
      border-color var(--tu-border-color)
      background-color rgb(250, 250, 252)
    .check-icon, .line-icon
      fill rgba(194, 194, 194, 1)

$zoom = '.tu-checkbox-zoom'

{$zoom}-enter-from
  transform scale3d(0.5, 0.5, 1)

{$zoom}-leave-active
  transform scale3d(0.5, 0.5, 1)

{$zoom}-enter-active,
{$zoom}-leave-active
  transition opacity 0.3s ease, transform 0.3s ease

{$zoom}-enter-from,
{$zoom}-leave-to
  opacity 0