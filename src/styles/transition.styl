.tu-collapse-transition--active
  overflow hidden
  transition height 0.3s ease-in-out, margin-top 0.3s ease-in-out, margin-bottom 0.3s ease-in-out

.tu-expand-transition--active
  transition width 0.25s ease-in-out, margin 0.25s ease-in-out, opacity 0.25s ease-in-out

// Fade
$fade = '.tu-fade'

{$fade}-enter-from,
{$fade}-leave-to
  opacity 0

{$fade}-enter-active,
{$fade}-leave-active
  transition opacity 0.3s ease

// Zoom
$zoom = '.tu-zoom'

{$zoom}-enter-from
  transform scale3d(0.8, 0.8, 1)

{$zoom}-leave-active
  transform scale3d(0.8, 0.8, 1)

{$zoom}-enter-active,
{$zoom}-leave-active
  transition opacity 0.25s ease, transform 0.25s ease

{$zoom}-enter-from,
{$zoom}-leave-to
  opacity 0

// Slide 
$slide = '.tu-slide'

{$slide}-enter-from
  transform translateX(-25px)
  opacity 0

{$slide}-leave-to
  transform translateX(25px)
  opacity 0

{$slide}-enter-active,
{$slide}-leave-active
  transition opacity 0.5s, transform 0.5s
