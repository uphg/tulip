@require './_variable'

$base = '.tu-card'

{$base}
  width 100%
  display flex 
  flex-direction column
  border-radius var(--tu-border-radius)
  font-size var(--tu-font-size)
  line-height var(--tu-line-height)
  color var(--tu-text-color)
  word-break break-word

  &__header
    font-size 18px
    padding 0 20px
    min-height 48px
    display flex
    align-items center
    border-bottom 1px solid var(--tu-border-color)

  &__header-wrap
    width 100%
    display flex
    align-items center
  
  &__header-extra
    margin-left auto

  &__content
    padding 16px 20px

  &--bordered
    border 1px solid var(--tu-border-color)
  
  &--hoverable
    transition box-shadow 0.25s $cubic-bezier
    &:hover
      box-shadow 0 1px 2px -2px rgba(0, 0, 0, 0.08), 0 3px 6px 0 rgba(0, 0, 0, 0.06), 0 5px 12px 4px rgba(0, 0, 0, 0.04)
