$base = '.tu-radio'
$button = '.tu-radio-button'
$group = '.tu-radio-group'

{$base}
  --tu-size 16px
  --tu-line-height 1.6
  --tu-box-shadow-focus 0 0 0 2.2px rgba(68, 99, 209, 0.3)
  --tu-text-color-disabled rgba(#c2c2c2, 1)
  cursor pointer
  user-select none
  position relative
  display inline-flex
  font-size var(--tu-font-size)
  line-height var(--tu-line-height)

  &--small
    --tu-size 14px

  &--large
    --tu-size 18px
    --tu-font-size 15px

  &-input
    cursor pointer
    opacity 0
    position absolute
    inset 0
    z-index 1

  &__dot
    width var(--tu-size)
    height var(--tu-size)
    position relative
    display flex
    transition border-color 0.3s, box-shadow 0.3s
    border-radius 50%
    border 1px solid rgb(224, 224, 230)

    &::before
      content ''
      position absolute
      inset 0
      margin auto
      width calc(var(--tu-size) - 8px)
      height calc(var(--tu-size) - 8px)
      border-radius 50%
      transition opacity 0.3s, transform 0.3s
      opacity 0
      transform scale(0.8)
      background-color var(--tu-primary-color)

    &-wrap
      display flex
      align-items center

    &--checked
      border-color var(--tu-primary-color)

      &::before
        opacity 1
        transform scale(1)

  &:hover
    {$base}__dot
      border-color var(--tu-primary-color)

  &__label
    padding 0 8px

  &--focus:not(:active):not(&--disabled)
    {$base}__dot
      border-color var(--tu-primary-color)
      box-shadow var(--tu-box-shadow-focus)

  &&--disabled
    cursor not-allowed

    {$base}-input
      cursor not-allowed

    {$base}__dot
      border-color rgb(224, 224, 230)

      &::before
        background-color rgb(224, 224, 230)

    {$base}__label
      color var(--tu-text-color-disabled)

{$button}
  --tu-height 34px
  --tu-box-shadow-focus 0 0 0 2px rgba(68, 99, 209, 0.3)
  display flex
  font-size var(--tu-font-size)
  cursor pointer
  user-select none
  position relative
  padding 0 14px
  transition color 0.3s $cubic-bezier

  &--small
    --tu-height 28px

  &--large
    --tu-height 40px
    --tu-font-size 15px

  &:first-child
    border-top-left-radius 3px
    border-bottom-left-radius 3px

    {$button}__border, {$button}__status-border
      border-top-left-radius 3px
      border-bottom-left-radius 3px

    {$button}__border
      border-left 1px solid var(--tu-border-color)

    {$button}__status-border
      left 0

  &:last-child
    border-top-right-radius 3px
    border-bottom-right-radius 3px

    {$button}__border, {$button}__status-border
      border-top-right-radius 3px
      border-bottom-right-radius 3px

    {$button}__border
      border-right 1px solid var(--tu-border-color)

    {$button}__status-border
      right 0

  &-input
    cursor pointer
    opacity 0
    position absolute
    inset 0
    z-index 1

  &__label
    height var(--tu-height)
    line-height var(--tu-height)

  &__border, &__status-border
    position absolute
    top 0
    bottom 0

  &__border
    left 0
    right 0
    border-top 1px solid var(--tu-border-color)
    border-bottom 1px solid var(--tu-border-color)

  &__status-border
    left -1px
    right -1px
    border 1px solid #0000
    z-index 1
    transition border-color 0.3s $cubic-bezier, box-shadow 0.3s $cubic-bezier

  &:hover:not(&--disabled):not(&--filling)
    color var(--tu-primary-color)

  &--checked, &--focus
    {$button}__status-border
      border-color var(--tu-primary-color)

  &--filling
    --tu-height 32px
    border-top 1px solid var(--tu-border-color)
    border-bottom 1px solid var(--tu-border-color)
    transition color 0.3s, border-color 0.3s, background-color 0.3s

    &:first-child
      border-left 1px solid var(--tu-border-color)

    &:last-child
      border-right 1px solid var(--tu-border-color)

    &:hover:not({$button}--disabled):not({$button}--checked):not({$button}--focus)
      color var(--tu-primary-color)

    &{$button}--disabled
      color inherit
      background-color #f2f2f2

    &{$button}--checked, &{$button}--focus
      color #fff
      border-color var(--tu-primary-color)
      background-color var(--tu-primary-color)

  &--focus:not(&--disabled)
    {$button}__status-border
      box-shadow var(--tu-box-shadow-focus)

  &--disabled
    cursor not-allowed
    opacity 0.5

    {$button}-input
      cursor not-allowed

$divider = '.tu-radio-group__divider'

{$group}
  --tu-height 34px
  display flex
  font-size var(--tu-font-size)

  &--small
    --tu-height 28px

  &--large
    --tu-height 40px

  &__divider
    display flex
    height var(--tu-height)
    min-width 1px
    transition background-color 0.3s, opacity 0.3s
    background-color var(--tu-border-color)

    &&--checked
      background-color #0000

    &&--disabled
      opacity 0.5

    &--filling&--checked
      background-color var(--tu-primary-color)

    &&--focus
      background-color var(--tu-primary-color)

    &--filling
      {$button}--checked + {$divider}
        background-color var(--tu-primary-color)

    &--filling&&--disabled
      opacity 0.5

  {$button}--checked + {$divider}
    background-color #0000

  {$button}--checked + {$divider}--filling, {$button}--focus + {$divider}--filling
    background-color var(--tu-primary-color)

    &{$divider}--disabled
      opacity 1

  {$button}--disabled + {$divider}--filling
    opacity 0.5

    &{$divider}--checked
      opacity 1
