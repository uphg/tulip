@require './_variable'

$base = '.tu-selection-input'

{$base}
  --tu-text-color-disabled rgba(194, 194, 194, 1)
  --tu-color-active rgba(255, 255, 255, 1)
  --tu-color-disabled rgb(250, 250, 252)
  --tu-icon-size 16px
  --tu-height 34px
  &--small
    --tu-height 28px
  &--large
    --tu-height 40px

{$base}
  cursor pointer
  display flex
  position relative
  width 100%
  min-height var(--tu-height)
  line-height var(--tu-height)
  border-radius 3px
  padding 0 12px
  color var(--tu-text-color)
  &:hover:not(&--disabled), &--hover:not(&--disabled)
    {$base}__border
      border-color var(--tu-primary-color)
  &--focus:not(&--disabled)
    {$base}__border
      border-color var(--tu-primary-color)
      box-shadow var(--tu-wave-active-box-shadow)
  &:focus, &:focus-visible
    outline none
  
  &--disabled
    cursor not-allowed
    color var(--tu-text-color-disabled)
    background-color var(--tu-color-disabled)

  &__wrapper
    width 100%
    position relative
  
  &__content
    height 100%
    font-size var(--tu-font-size)
    display flex
    align-items center

  &__tags
    display flex
    flex-wrap wrap
    line-height 1
    padding 2px 0
    gap 3px 7px

  &__suffix
    display flex
    align-items center

  &__icon-wrap
    width 16px
    height 16px
    margin-right -2px
    position relative
    font-size var(--tu-icon-size)
    color var(--tu-text-color-placeholder)

  &-clear
    width 16px
    height 16px

    &--visible
      transition color 0.25s
      &:hover, &:active
        color rgba(146, 146, 146, 1)

    & > .tu-base-icon
      position absolute
      inset 0

  &__placeholder
    color var(--tu-text-color-placeholder)
    font-size var(--tu-font-size)
    line-height inherit
    position absolute
    inset 0

  &__border
    position absolute
    inset 0
    pointer-events none
    border-radius inherit
    border 1px solid var(--tu-border-color)
    transition box-shadow 0.3s $cubic-bezier, border-color 0.3s $cubic-bezier
