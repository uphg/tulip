
:root
  // --vp-c-brand: #1a73e8;
  --vp-c-brand: var(--tu-primary-color);
  --vp-c-brand-light: var(--tu-primary-color-hover);
  --vp-c-brand-lighter: var(--tu-primary-color-lighter);
  --vp-c-brand-dark: var(--tu-primary-color);
  --vp-c-brand-darker: var(--tu-primary-color-hover);

.VPSidebar
  &::-webkit-scrollbar
    width 7px
    height 7px

  &::-webkit-scrollbar-thumb
    border-radius 7px
    background-color rgba(0, 0, 0, 0.25)

  &::-webkit-scrollbar-thumb:hover
    background-color rgba(0, 0, 0, 0.4)

  &::-webkit-scrollbar-track
    background-color transparent

.vp-doc div[class*='language-'] > pre
  &::-webkit-scrollbar
    width 7px
    height 7px

  &::-webkit-scrollbar-thumb
    border-radius 7px
    background-color rgba(255, 255, 255, 0.25)

  &::-webkit-scrollbar-thumb:hover
    background-color rgba(255, 255, 255, 0.35)

  &::-webkit-scrollbar-track
    background-color transparent

.main .vp-doc
  table
    display: table;
    width: 100%;
  th
    text-align left

.VPHome .has-image .image-src
  width 240px
  opacity 0.8